{
  "name": "runlintic-app-uiux",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "// Package management": "",
    "manypkg:fix": "manypkg fix",
    "postinstall": "manypkg check",
    "// Release management": "",
    "release:all": "pnpm -w run release:runlintic && pnpm -w run release:docs && pnpm -w run release:web",
    "release:runlintic": "pnpm -w --filter packages/release-it release",
    "release:docs": "pnpm -w --filter docs release",
    "release:web": "pnpm -w --filter web release"
  },
  "devDependencies": {
    "@manypkg/cli": "^0.25.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=22"
  },
  "manypkg": {
    "ignoredRules": [
      "INTERNAL_MISMATCH"
    ]
  }
}
