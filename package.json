{
  "name": "runlintic-app-uiux",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "// Dependency analysis": "",
    "depcheck": "depcheck",
    "deps:audit": "pnpm audit",
    "deps:audit-fix": "pnpm audit --fix",
    "deps:check": "pnpm -w run depcheck && pnpm -w run knip",
    "deps:clean": "pnpm -w run clean:all && pnpm install",
    "deps:dedupe": "pnpm dedupe",
    "deps:outdated": "pnpm outdated",
    "deps:update": "pnpm update",
    "deps:update-latest": "pnpm update --latest",
    "deps:validate": "pnpm -w run deps:check && pnpm -w run deps:audit",
    "// Quality checks": "",
    "lint": "turbo run lint",
    "lint:fix": "turbo lint -- --fix && manypkg fix",
    "lockfile:fix": "pnpm fix-lockfile",
    "fix-lockfile": "pnpm install --frozen-lockfile",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-all": "pnpm -w run lint && pnpm -w run typecheck && pnpm -w run deps:check && pnpm -w run build",
    "check-types": "turbo run check-types",
    "type-check": "tsc --noEmit",
    "typecheck": "turbo typecheck",
    "// Package management": "",
    "manypkg:fix": "manypkg fix",
    "postinstall": "manypkg check",
    "// Release management": "",
    "release:all": "pnpm -w run release:runlintic && pnpm -w run release:docs && pnpm -w run release:web",
    "release:runlintic": "pnpm -w --filter packages/release-it release",
    "release:docs": "pnpm -w --filter docs release",
    "release:web": "pnpm -w --filter web release",
    "workspace:check": "pnpm -w run manypkg:fix",
    "workspace:sync": "pnpm install && pnpm -w run workspace:check",
    "health-check": "pnpm -w run workspace:sync && pnpm -w run deps:validate && pnpm -w run check-all"
  },
  "devDependencies": {
    "@manypkg/cli": "^0.25.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=22"
  },
  "manypkg": {
    "ignoredRules": [
      "INTERNAL_MISMATCH"
    ]
  }
}
