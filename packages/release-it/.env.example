# Environment variables for Runlintic Release it Package
# Copy this file to .env and fill in your actual values

# -----------------------------------------------------------------------------
# Local Development Apps Config
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# -----------------------------------------------------------------------------
# Release Management (NPM Publishing)
# -----------------------------------------------------------------------------
# Optional: NPM token if publishing to NPM registry
# NPM_TOKEN=your_npm_token_here

# Optional: Custom release configuration
# RELEASE_VERSION_PREFIX=v
# RELEASE_BRANCH=main

# Release settings
RELEASE_REQUIRE_CLEAN_WORKING_DIR=true

# -----------------------------------------------------------------------------
# Github (REQUIRED FOR RELEASES)
# -----------------------------------------------------------------------------
# GitHub token for releases - GET FROM: https://github.com/settings/tokens
# Required scopes: repo, write:packages
GH_TOKEN=your_github_token_here
GH_URL=https://github.com/R-Dolce-Group/runlintic-release-manager.git
GH_SSH=git@github.com:R-Dolce-Group/runlintic-release-manager.git

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DATABASE_URI=
DATABASE_TYPE=postgresql