{
  "name": "release-it",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "// Dev workflow": "dev = apps/docs + apps/web",
    "build": "turbo run build",
    "build:all": "turbo run build",
    "// Dependency analysis and management": "",
    "clean": "rm -rf packages/*/dist apps/*/.next .turbo packages/*/.turbo apps/*/.turbo",
    "clean:all": "pnpm run clean && rm -rf node_modules packages/*/node_modules apps/*/node_modules pnpm-lock.yaml",
    "clean:cache": "rm -rf .turbo packages/*/.turbo apps/*/.turbo",
    "depcheck": "depcheck",
    "deps:audit": "pnpm audit",
    "deps:audit-fix": "pnpm audit --fix",
    "deps:check": "pnpm run depcheck && pnpm run knip",
    "deps:clean": "pnpm run clean:all && pnpm install",
    "deps:dedupe": "pnpm dedupe",
    "deps:outdated": "pnpm outdated",
    "deps:update": "pnpm update",
    "deps:update-latest": "pnpm update --latest",
    "deps:validate": "pnpm run deps:check && pnpm run deps:audit",
    "// Quality checks": "",
    "check-all": "pnpm run lint && pnpm run typecheck && pnpm run deps:check && pnpm run build",
    "check-types": "turbo run check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "lint:fix": "turbo lint -- --fix && manypkg fix",
    "fix-lockfile": "pnpm install --frozen-lockfile",
    "lockfile:fix": "pnpm fix-lockfile",
    "type-check": "tsc --noEmit",
    "typecheck": "turbo typecheck",
    "// Package management": "",
    "manypkg:fix": "manypkg fix",
    "postinstall": "manypkg check",
    "prepare": "husky",
    "// Release Runlintic tools": "",
    "version": "../../auto-changelog -p && git add ../../CHANGELOG.md",
    "release": "export $(grep -v '^#' .env | xargs) && release-runlintic",
    "release:all": "pnpm -w run release:runlintic && pnpm -w run release:docs && pnpm -w run release:web",
    "release:runlintic": "pnpm -w --filter packages/release-it release",
    "release:apps": "pnpm run release:web && pnpm run release:docs",
    "release:beta": "release-runlintic --preRelease=beta",
    "// Release Docs tools": "",
    "release:docs": "pnpm --filter docs release",
    "release:docs:beta": "pnpm --filter docs release:beta",
    "release:docs:dry": "pnpm --filter docs release:dry",
    "release:docs:major": "pnpm --filter docs release:major",
    "release:docs:minor": "pnpm --filter docs release:minor",
    "release:docs:patch": "pnpm --filter docs release:patch",
    "// Release Web tools": "",
    "release:web": "pnpm --filter web release",
    "release:web:beta": "pnpm --filter web release:beta",
    "release:web:dry": "pnpm --filter web release:dry",
    "release:web:major": "pnpm --filter web release:major",
    "release:web:minor": "pnpm --filter web release:minor",
    "release:web:patch": "pnpm --filter web release:patch"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@manypkg/cli": "^0.25.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@t3-oss/env-nextjs": "^0.13.8",
    "auto-changelog": "*",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "depcheck": "^1.4.7",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "release-it": "^19.0.4",
    "turbo": "^2.5.6",
    "typescript": "5.9.2",
    "zod": "^4.0.17"
  },
  "manypkg": {
    "ignoredRules": [
      "INTERNAL_MISMATCH"
    ]
  },
  "keywords": [],
  "author": "R. Dolce Group",
  "license": "ISC",
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=22"
  }
}
